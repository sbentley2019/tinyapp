<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (username) { %>
          <h5 style="margin-left: 700px; margin-top: 10px;">Logged In As: <%= username%></h5>
          <form method="POST" action="/logout" style="margin-left: 25px; margin-top: 3px">
            <button type="submit" class="btn" style="background-color: #2DA647; color: black; border-color: black;">Logout</button>
          </form>
        <% } else { %>
          <form method="POST" action="/login" style="margin-left: 700px; margin-top: 3px">
            <input type="text" placeholder="username" name="username">
            <button type="submit" class="btn" style="background-color: #2DA647; color: black; border-color: black;">Login</button>
          </form>
          <% } %>
      </div>
    </div>
  </nav>
</header>